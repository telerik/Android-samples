<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/custom_editor_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/custom_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.telerik.widget.dataform.visualization.viewers.DataFormValidationView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/custom_editor_validation_view"/>

</LinearLayout>